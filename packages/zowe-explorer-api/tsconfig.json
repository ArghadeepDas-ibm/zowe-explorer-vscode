{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": false,
    "pretty": true,
    "sourceMap": true,
    "newLine": "lf",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "__tests__", "__mocks__"],
  "exclude": ["lib", "node_modules"]
}
